.topbar
    // LOGO
    .topbar-left
        .text-center
            a.logo(href='index.html')
                i.icon-magnet.icon-c-logo
                span
                    | RTW-PANEL
            // Image Logo here
            // <a href="index.html" class="logo">
            // <i class="icon-c-logo"> <img src="assets/images/logo_sm.png" height="42"/> </i>
            // <span><img src="assets/images/logo_light.png" height="20"/></span>
            // </a>
    // Button mobile view to collapse sidebar menu
    nav.navbar-custom
        ul.list-inline.float-right.mb-0
            li.list-inline-item.dropdown.notification-list
                a.nav-link.dropdown-toggle.arrow-none.waves-light.waves-effect(data-toggle='dropdown', href='#', role='button', aria-haspopup='false', aria-expanded='false')
                    i.dripicons-bell.noti-icon
                    span.badge.badge-pink.noti-icon-badge 4
                .dropdown-menu.dropdown-menu-right.dropdown-arrow.dropdown-lg(aria-labelledby='Preview')
                    // item
                    .dropdown-item.noti-title
                        h5
                            span.badge.badge-danger.float-right 5
                            | Notification
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        .notify-icon.bg-success
                            i.icon-bubble
                        p.notify-details
                            | Robert S. Taylor commented on Admin
                            small.text-muted 1 min ago
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        .notify-icon.bg-info
                            i.icon-user
                        p.notify-details
                            | New user registered.
                            small.text-muted 1 min ago
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        .notify-icon.bg-danger
                            i.icon-like
                        p.notify-details
                            | Carlos Crouch liked
                            b Admin
                            small.text-muted 1 min ago
                    // All
                    a.dropdown-item.notify-item.notify-all(href='javascript:void(0);')
                        | View All
            li.list-inline-item.notification-list
                a#btn-fullscreen.nav-link.waves-light.waves-effect(href='#')
                    i.dripicons-expand.noti-icon
            li.list-inline-item.notification-list
                a.nav-link.right-bar-toggle.waves-light.waves-effect(href='#')
                    i.dripicons-message.noti-icon
            li.list-inline-item.dropdown.notification-list
                a.nav-link.dropdown-toggle.waves-effect.waves-light.nav-user(data-toggle='dropdown', href='#', role='button', aria-haspopup='false', aria-expanded='false')
                    img.rounded-circle(src='assets/images/users/avatar-1.jpg', alt='user')
                .dropdown-menu.dropdown-menu-right.profile-dropdown(aria-labelledby='Preview')
                    // item
                    .dropdown-item.noti-title
                        h5.text-overflow
                            small Welcome ! John
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        i.md.md-account-circle
                        span Profile
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        i.md.md-settings
                        span Settings
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        i.md.md-lock-open
                        span Lock Screen
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        i.md.md-settings-power
                        span Logout
        ul.list-inline.menu-left.mb-0
            li.float-left
                button.button-menu-mobile.open-left.waves-light.waves-effect
                    i.dripicons-menu
            li.hide-phone.app-search
                form(role='search')
                    input.form-control(type='text', placeholder='Search...')
                    a(href='')
                        i.fa.fa-search
// Top Bar End