extends layout

block content
  #page-header
    .container
        .page-header-container
            .page-header-left
                .page-header-title R.O. Arıtma Sistemleri
            .page-header-right
                ul.page-header-breadcrumbs
                    li
                        a(href='', title='Breadcrumbs Item') Anasayfa
                    li
                        a(href='', title='Breadcrumbs Item') Ürünler
                    li
                        span R.O. Arıtma Sistemleri
  #other-products
          .container
              .other-products
                  .other-products-left
                      button.button(type='button')
                          i.icon.icon-sponsors-left-arrow
                  .other-products-center
                      #otherProducts.swiper-container
                          .swiper-wrapper
                             -for(var x = 0; x < res.urunMarka.length; x++ ){
                              .swiper-slide
                                  a.other-products-item.active(href='/marka/'+res.urunMarka[x].seoUrl, title='Other')
                                      img.other-products-item-image( width='100' src=''+res.urunMarka[x].resim, alt=''+res.urunMarka[x].adi)
                                      span.other-products-item-title #{res.urunMarka[x].adi}
                              -}

                  .other-products-right
                      button.button(type='button')
                          i.icon.icon-sponsors-right-arrow

    #all-products

        -for(var x = 0; x < urunler.length; x ++ ){
        .all-products-item
            .container
                .row.all-products-row
                    .col-md-9
                        h2.all-products-title #{urunler[x].baslik}
                        h5.all-products-headline #{urunler[x].icerik}
                        p.all-products-description
                            | #{urunler[x].aciklama}
                        img.all-products-image(src='images/'+urunler[x].resim, alt='Product')
                        a.button.all-products-button(href='/urun/'+urunler[x].seoUrl+'/'+urunler[x]._id, title='Ürünü İncele') Ürünü İncele'

        -}


  include temp/sponsor
  include temp/ebulten